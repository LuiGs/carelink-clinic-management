// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Roles de usuario del sistema
enum Role {
  PROFESIONAL
  MESA_ENTRADA
  GERENTE
}

// Estado de los turnos en la agenda
enum AppointmentStatus {
  PENDING   // Turno reservado, sin llegada
  WAITING   // Paciente en sala de espera
  COMPLETED // Atendido
  CANCELED  // Cancelado
}

// Modelo de usuario con autenticación básica y rol
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String
  role          Role      @default(MESA_ENTRADA)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  appointments  Appointment[] @relation("ProfessionalAppointments")

  @@map("users")
}

// Sesiones simples basadas en token para manejo de login
model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("sessions")
}

// Turnos/appointments de la agenda de profesionales
model Appointment {
  id             String            @id @default(cuid())
  professionalId String            // Por ahora referenciamos a User.id con rol PROFESIONAL
  professional   User              @relation("ProfessionalAppointments", fields: [professionalId], references: [id], onDelete: Cascade)
  patientId      String?           // A definir paciente luego
  title          String
  start          DateTime
  end            DateTime
  status         AppointmentStatus @default(PENDING)
  notes          String?

  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([professionalId, start, end])
  @@map("appointments")
}